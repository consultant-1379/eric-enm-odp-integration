<?xml version="1.0" encoding="UTF-8"?>
<applications xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="CertificateRequest.xsd">
    <application>
        <certificates>
            <certificate>
                <tbscertificate>
                    <subject>
                        <entityname>eric-amos-odp-ssh-broker</entityname>
                        <distinguishname>CN=eric-amos-odp-ssh-broker</distinguishname>
                    </subject>
                    <certificateextension>
                        <subjectalternativename>
                            <dns>eric-amos-odp-ssh-broker</dns>
                        </subjectalternativename>
                    </certificateextension>
                </tbscertificate>
                <endentityprofilename>ENM_ODPFactorytrustDomain_Man_EP</endentityprofilename>
                <keypair>
                    <keypairsize>2048</keypairsize>
                    <keypairalgorithm>RSA</keypairalgorithm>
                </keypair>
                <keystore>
                    <base64keystore>
                        <storealias>factory</storealias>
                        <keyfilelocation>/factory.key</keyfilelocation>
                        <certificatefilelocation>/factory.crt</certificatefilelocation>
                    </base64keystore>
                </keystore>
            </certificate>
        </certificates>
        <truststores>
            <truststoreonly>
                <trustprofilename>ENM_ODPFactoryTrustDomain_TP</trustprofilename>
                <truststore>
                    <base64truststore>
                        <storealias>FactoryTrustDomain</storealias>
                        <storelocation>/factoryCA.crt</storelocation>
                        <storepassword>changeit</storepassword>
                    </base64truststore>
                </truststore>
                <oncheckresult>
                    <actionlist>
                        <checkcause>trustUpdate</checkcause>
                        <action>VMRestart</action>
                    </actionlist>
                </oncheckresult>
            </truststoreonly>
        </truststores>
        <crlupdatemode>CrlSelfManaged</crlupdatemode>
    </application>

<!--    SSO -->
    <application>
        <truststores>
            <truststoreonly>
                <trustprofilename>ENM_SYSTEM_TP</trustprofilename>
                <truststore>
                    <base64truststore>
                        <storealias>SsoTrustDomain</storealias>
                        <storelocation>/sso.crt</storelocation>
                        <storepassword>changeit</storepassword>
                    </base64truststore>
                </truststore>
                <oncheckresult>
                    <actionlist>
                        <checkcause>trustUpdate</checkcause>
                        <action>VMRestart</action>
                    </actionlist>
                </oncheckresult>
            </truststoreonly>
        </truststores>
        <crlupdatemode>CrlSelfManaged</crlupdatemode>
    </application>
    <user>
        <username>root</username>
        <usergroup>root</usergroup>
    </user>
</applications>
